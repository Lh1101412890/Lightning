<Window x:Class="LightningTime.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LightningTime"
        Title="Lightning申请码管理器" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" SizeToContent="WidthAndHeight">
    <Grid Width="950" Name="grid">
        <Grid.RowDefinitions>
            <RowDefinition Height="55"></RowDefinition>
            <RowDefinition Height="500"></RowDefinition>
        </Grid.RowDefinitions>

        <WrapPanel Margin="0,5,0,0">
            <TextBlock Margin="5,0,0,0" Text="机器码:" VerticalAlignment="Center"/>
            <TextBox Margin="5,0,0,0" Name="guidBox" TextWrapping="NoWrap" VerticalAlignment="Center" Height="20" Width="350" TextChanged="GuidBox_TextChanged"/>

            <TextBlock Margin="5,0,0,0" Text="备注:" VerticalAlignment="Center"/>
            <TextBox Margin="5,0,0,0" Name="note" TextWrapping="NoWrap" VerticalAlignment="Center" Height="20" Width="170" TextChanged="GuidBox_TextChanged"/>

            <CheckBox Margin="5,0,0,0" x:Name="foreverBox" VerticalAlignment="Center" Content="永久"/>

            <ComboBox HorizontalAlignment="Right" Margin="5,0,0,0" VerticalAlignment="Center" Width="65" Name="productBox">
                <ComboBoxItem IsSelected="True">CAD</ComboBoxItem>
                <ComboBoxItem>Revit</ComboBoxItem>
                <ComboBoxItem>Office</ComboBoxItem>
            </ComboBox>

            <TextBlock Margin="5,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center"><Run Text="时间(天):"/></TextBlock>
            <TextBox Margin="5,0,0,0" x:Name="timeBox" TextWrapping="NoWrap" VerticalAlignment="Center" VerticalContentAlignment="Center" Width="45" Height="22" Text="0"/>

            <Button Margin="5,0,0,0" Content="生成密文" VerticalAlignment="Center" Width="55" Height="22" Click="NewCode_Click"/>
            <Button Margin="5,0,0,0" Content="保存记录" VerticalAlignment="Center" Width="55" Height="22" Click="SaveCode_Click"/>
        </WrapPanel>

        <WrapPanel Margin="0,30,0,0">
            <TextBlock HorizontalAlignment="Left" Margin="5,0,0,0" Text="激活码:" VerticalAlignment="Center"/>
            <TextBox x:Name="codeBox" HorizontalAlignment="Left" Margin="5,0,0,0" TextWrapping="NoWrap" VerticalAlignment="Center" Width="900" Height="20"/>
        </WrapPanel>

        <GroupBox Grid.Row="1" Header="申请列表" VerticalAlignment="Top">
            <DataGrid x:Name="dataGrid" ItemsSource="{Binding}" AutoGenerateColumns="False" CanUserAddRows="False" MouseDoubleClick="DataGrid_MouseDoubleClick">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="备注" Binding="{Binding Note, Mode=TwoWay}" IsReadOnly="False"></DataGridTextColumn>
                    <DataGridTextColumn Header="Guid" Binding="{Binding Guid}" IsReadOnly="True"></DataGridTextColumn>
                    <DataGridTextColumn Header="类型" Binding="{Binding Product}" IsReadOnly="True"></DataGridTextColumn>
                    <DataGridTextColumn Header="日期" Binding="{Binding Date}" IsReadOnly="True"></DataGridTextColumn>
                    <DataGridCheckBoxColumn Header="永久" Binding="{Binding IsForever}" IsReadOnly="True"></DataGridCheckBoxColumn>
                    <DataGridTextColumn Header="天数" Binding="{Binding Days}" IsReadOnly="True"></DataGridTextColumn>
                    <DataGridTextColumn Header="申请码" Binding="{Binding Code}" IsReadOnly="True"></DataGridTextColumn>
                </DataGrid.Columns>
                <DataGrid.ContextMenu>
                    <ContextMenu MenuItem.Click="ContextMenu_Click">
                        <Label>删除</Label>
                    </ContextMenu>
                </DataGrid.ContextMenu>
            </DataGrid>
        </GroupBox>
    </Grid>
</Window>
